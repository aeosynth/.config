super + semicolon
  alacritty

super + slash
  pkill -USR1 -x sxhkd

super + @Escape
  doas zzz

# bspwm
super + f
  bspc node -t ~fullscreen

super + {_,shift + }{j,k}
  bspc node -{f,s} {next,prev}.local

super + {l,grave}
  bspc desktop -f last

super + {_,shift + }{1-5}
  bspc {desktop -f,node -d} '^{1-5}'
